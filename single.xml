<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cross Browser Single Test">
	<parameter name="url"
		value="https://www.lambdatest.com/selenium-playground/" />
	<test name="Chrome Browser Testing">
		<parameter name="browser" value="Chrome" />
		<parameter name="version" value="88.0" />
		<parameter name="platform" value="Windows 10" />
		<classes>
			<class name="testNG_TestCases.Testng_Test1" />
			<class name="testNG_TestCases.Testng_Test2" />
			<class name="testNG_TestCases.Testng_Test3" />
		</classes>
	</test> <!-- Test -->

	<test name="Edge Browser Testing">
		<parameter name="browser" value="Edge" />
		<parameter name="version" value="87.0" />
		<parameter name="platform" value="MacOS Catalina" />
		<classes>
			<class name="testNG_TestCases.Testng_Test1" />
			<class name="testNG_TestCases.Testng_Test2" />
			<class name="testNG_TestCases.Testng_Test3" />

		</classes>
	</test> <!-- Test -->

	<test name="Firefox Browser Testing">
		<parameter name="browser" value="Firefox" />
		<parameter name="version" value="82.0" />
		<parameter name="platform" value="Windows 7" />
		<classes>
			<class name="testNG_TestCases.Testng_Test1" />
			<class name="testNG_TestCases.Testng_Test2" />
			<class name="testNG_TestCases.Testng_Test3" />
		</classes>
	</test> <!-- Test -->

	<test name="Internet Explorer Testing">
		<parameter name="browser" value="Internet Explorer" />
		<parameter name="version" value="11.0" />
		<parameter name="platform" value="Windows 10" />
		<classes>
			<class name="testNG_TestCases.Testng_Test1" />
			<class name="testNG_TestCases.Testng_Test2" />
			<class name="testNG_TestCases.Testng_Test3" />
		</classes>
	</test> <!-- Test -->
</suite> <!-- Suite -->
